<%- include ("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Our Webpage</h1>
            <p>View available campgrounds from all over the place</p>
    
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class= "col-md-3 col-sm-6">                
                <div class= "card" style="display:flex; flex-wrap: wrap; margin-bottom: 25px;">
                    <img class="img-thumbnail" src="<%= campground.image %>" alt="<%= campground.name %>">
                
                    <div class= "card-body">
                        <h5 class="card-text"><%= campground.name %></h5>
                        <a href="/campgrounds/<%= campground._id %>" class="card-text btn btn-primary">More</a>
                    </div>
                </div>
            
            </div>
        <% }) %>
    </div>
</div>

<%- include ("../partials/footer") %>