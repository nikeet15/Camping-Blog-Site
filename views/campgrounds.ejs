<%- include ("./partials/header") %>

<div class="container">
    
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Our Webpage</h1>
            <p>View available campgrounds from all over the place</p>
    
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% camps.forEach(function(camp){ %>
            <div class= "col-md-3 col-sm-6">                
                <div class= "card">
                    <img class="img-thumbnail" src="<%= camp.image %>" alt="<%= camp.name %>">
                
                    <div class= "card-body-small">
                        <h5 class="card-text"><%= camp.name %></h5>
                    </div>
                </div>
            
            </div>
        <% }) %>
    </div>

</div>

<%- include ("./partials/footer") %>